<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout">
  <l:VerticalLayout id="newProduct">
    <Label text="Name" />
    <Input
      name="Name"
      placeholder="New product name"
      fieldGroupIds="newProduct"
      liveChange="onChange"
    />
    <Label text="Price" />
    <Input
      name="Price"
      type="Number"
      placeholder="14,23"
      fieldGroupIds="newProduct"
      liveChange="onChange"
    />
    <Label text="Rating" />
    <Input
      name="Rating"
      type="Number"
      placeholder="3"
      fieldGroupIds="newProduct"
      liveChange="onChange"
    />
  </l:VerticalLayout>
</core:FragmentDefinition>
